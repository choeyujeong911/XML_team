<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="railroad">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="metro" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="subway" minOccurs="1" maxOccurs="unbounded"/>
                        </xs:sequence>
                        <xs:attribute name="co" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="train" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:choice minOccurs="0" maxOccurs="unbounded">
                            <xs:element ref="ITX_Saemaeul"/>
                            <xs:element ref="Mugunghwa_Ho"/>
                            <xs:element ref="KTX"/>
                        </xs:choice>
                        <xs:attribute name="co" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="region" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="subway">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="info" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element ref="title" minOccurs="1" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element ref="line" minOccurs="1" maxOccurs="unbounded"/>
            </xs:sequence>
            <xs:attribute name="no" type="xs:ID" use="required"/>
        </xs:complexType>
    </xs:element>

    <!-- Define other elements and attributes similarly -->

</xs:schema>